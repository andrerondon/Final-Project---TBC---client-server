<h1>All Products</h1>
<% @products.each do |product| %>
    <ul class="list-group">
    <% puts product%>
        <li class="list-group-item"><%= link_to product.name, product_path(product) %></li>
        <div>
        <%# logic to show even without photo %>
            <% if product.img_url.attached? %>
                <%= image_tag product.img_url.variant(resize: '500x500') %>
            <% end %>
        </div>
    </ul>
<% end %>