<% if @product.errors.any? %>
    <ul>
        <% @product.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for @product do |f| %>
    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>
    <div>
        <%= f.label :description %>
        <%= f.text_area :description %>
    </div>
    <div>
        <%= f.label :price %>
        <%= f.number_field :price %>
    </div>
     <div>
        <%= f.label :img_url %>
        <%= f.file_field  :img_url  %> 
    </div>
    <%= f.submit 'Submit' %>
<% end %>